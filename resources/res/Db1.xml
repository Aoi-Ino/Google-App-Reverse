<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/bottom" android:background="@color/white" android:layout_width="match_parent" android:layout_height="500dp" app:behavior_hideable="true" app:behavior_peekHeight="10dp" app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
            <TextView android:textSize="13dp" android:textColor="@color/black" android:id="@+id/tv_chassi_no" android:paddingLeft="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Chassis No. (Enter last four digits)" android:fontFamily="@font/poppins_regular"/>
            <LinearLayout android:orientation="horizontal" android:background="@drawable/sign_in_back" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:weightSum="10" android:minHeight="38dp">
                <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#1aa7e9" android:id="@+id/chassis_no_txt" android:paddingLeft="10dp" android:paddingBottom="3dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/nil" android:layout_weight="4"/>
                <EditText android:textSize="18sp" android:textStyle="bold" android:gravity="left" android:id="@+id/chassis_no_et" android:focusable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="5dp" android:hint="*     *     *     *     * " android:maxLength="5" android:digits="1234567890QWERTYUIOPASDFGHJKLZXCVBNM.*~-/" android:layout_weight="5" android:inputType="textCapCharacters" android:imeOptions="actionNext"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
            <TextView android:textSize="13dp" android:textColor="@color/black" android:id="@+id/tv_engine_no" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/enter_five_engine_no" android:fontFamily="@font/poppins_regular"/>
            <LinearLayout android:orientation="horizontal" android:background="@drawable/sign_in_back" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:weightSum="10" android:minHeight="38dp">
                <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#1aa7e9" android:id="@+id/engine_no_txt" android:paddingLeft="10dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/nil" android:layout_weight="6"/>
                <EditText android:textSize="18sp" android:textStyle="bold" android:gravity="left" android:id="@+id/engine_no_et" android:focusable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="5dp" android:hint="*     *     *     *     * " android:maxLength="5" android:digits="1234567890QWERTYUIOPASDFGHJKLZXCVBNM.*~-" android:layout_weight="5" android:inputType="textCapCharacters" android:imeOptions="actionDone"/>
            </LinearLayout>
            <TextView android:textSize="14dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/createvirtualrcbutton" android:background="@drawable/round_shape_kotlin" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="20dp" android:text="Create Virtual RC" android:fontFamily="@font/nexgenttf"/>
            <TextView android:textSize="14dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/closebutton" android:background="@drawable/round_shape_kotlin" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="20dp" android:text="Close" android:fontFamily="@font/nexgenttf"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
