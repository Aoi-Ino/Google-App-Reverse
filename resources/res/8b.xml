                    <LinearLayout android:gravity="right" android:orientation="horizontal" android:id="@+id/notification" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="20dp">
                        <ImageView android:layout_gravity="center" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="5dp" android:src="@drawable/mvvm_alarm"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
