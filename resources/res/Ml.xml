<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/activity_custom_calendar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:paddingTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="13dp">
        <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/display_current_year" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:textAllCaps="true"/>
        <ImageView android:id="@+id/year_selection" android:padding="3sp" android:visibility="gone" android:layout_width="20dp" android:layout_height="30sp" android:src="@drawable/white_next_icon" android:contentDescription="@string/app_name" android:rotation="90" app:tint="@color/black"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/black" android:layout_gravity="top|center_vertical|center_horizontal|center" android:id="@+id/display_current_date" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginTop="4dp" android:layout_weight="4" android:layout_marginStart="13dp"/>
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/previous_month" android:padding="3sp" android:layout_width="0sp" android:layout_height="30sp" android:src="@drawable/white_next_icon" android:layout_weight="0.3" android:contentDescription="@string/app_name" android:rotation="180" app:tint="@color/black"/>
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/next_month" android:padding="3sp" android:layout_width="0sp" android:layout_height="30sp" android:layout_marginRight="20dp" android:src="@drawable/white_next_icon" android:layout_weight="0.3" android:contentDescription="@string/app_name" app:tint="@color/black"/>
    </LinearLayout>
    <View android:background="#f5f5f5" android:layout_width="match_parent" android:layout_height="0.5sp"/>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="13sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/mon" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/mon" android:layout_weight="1"/>
        <TextView android:textSize="13sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/tue" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/tue" android:layout_weight="1"/>
        <TextView android:textSize="13sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/wed" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/wed" android:layout_weight="1"/>
        <TextView android:textSize="13sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/thu" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/thu" android:layout_weight="1"/>
        <TextView android:textSize="13sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/fri" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/fri" android:layout_weight="1"/>
        <TextView android:textSize="13sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/sat" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/sat" android:layout_weight="1"/>
        <TextView android:textSize="13sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/sun" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/sun" android:layout_weight="1"/>
    </LinearLayout>
    <com.nic.mparivahan.dlservices.ui.slots.calendar.ExpandableHeightGridView android:id="@+id/calendar_grid" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:horizontalSpacing="4sp" android:verticalSpacing="4sp" android:numColumns="7"/>
</LinearLayout>
