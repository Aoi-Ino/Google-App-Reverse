<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/light_gray" android:layout_width="match_parent" android:layout_height="wrap_content">
    <include layout="@layout/mvvm_header"/>
    <LinearLayout android:gravity="top|left|center_vertical|center_horizontal|center" android:orientation="vertical" android:background="@drawable/mvvm_linear" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.nic.mparivahan.MyTextView android:textSize="22sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/vehicle_search"/>
            <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="150dp" android:layout_marginTop="5dp">
                <LinearLayout android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:orientation="vertical" android:background="@drawable/sign_in_new" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:layout_weight="1">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_onlinetax"/>
                    <com.nic.mparivahan.MyTextView android:textSize="@dimen/new_normal_txt" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/online_tax" android:fontFamily="sans-serif-light"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:orientation="vertical" android:background="@drawable/paytax" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:layout_weight="1">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_transaction"/>
                    <com.nic.mparivahan.MyTextView android:textSize="@dimen/new_normal_txt" android:textStyle="bold" android:textColor="@color/black" android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/trans_status" android:fontFamily="sans-serif-light"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:orientation="vertical" android:background="@drawable/paytax" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:layout_weight="1">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_receipt"/>
                    <com.nic.mparivahan.MyTextView android:textSize="@dimen/new_normal_txt" android:textStyle="bold" android:textColor="@color/black" android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/reprint_receipt_new" android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </LinearLayout>
            <com.nic.mparivahan.MyTextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/enter_rc_no_for_pending_transaction"/>
            <FrameLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
                <EditText android:background="@drawable/sign_in_back" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:hint="@string/enter_rc_no_for_pending_transaction"/>
                <LinearLayout android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:padding="6dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="5dp">
                    <com.nic.mparivahan.MyTextView android:textSize="@dimen/new_normal_txt" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:background="@drawable/sign_in_new" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/search" android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <View android:background="@color/light_gray" android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginTop="15dp"/>
    </LinearLayout>
</LinearLayout>
