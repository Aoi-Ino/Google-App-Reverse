<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/layerlistexample" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <include android:id="@+id/applicationStatusHeader" layout="@layout/vahan_echallan_header"/>
            <LinearLayout android:gravity="top|left|center_vertical|center_horizontal|center" android:orientation="vertical" android:background="@drawable/mvvm_linear" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent">
                    <com.nic.mparivahan.MyTextView android:textSize="@dimen/_14ssp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/idLayoutTitle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="Application Status"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_15sdp">
                        <com.nic.mparivahan.MyTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/gray" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/application_no" android:layout_weight="1" android:fontFamily="@font/nexgenttf"/>
                        <com.nic.mparivahan.MyTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="right" android:id="@+id/txt_application_no_value" android:layout_width="0dp" android:layout_height="wrap_content" android:text="XXXXXXXXXX" android:layout_weight="1" android:fontFamily="@font/nexgenttf"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_8sdp">
                        <com.nic.mparivahan.MyTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/gray" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/registration_no" android:layout_weight="1" android:fontFamily="@font/nexgenttf"/>
                        <com.nic.mparivahan.MyTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="right" android:id="@+id/txt_engine_no_value" android:layout_width="0dp" android:layout_height="wrap_content" android:text="XXXX" android:layout_weight="1" android:fontFamily="@font/nexgenttf"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_8sdp">
                        <com.nic.mparivahan.MyTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/gray" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/chassis_no" android:layout_weight="1" android:fontFamily="@font/nexgenttf"/>
                        <com.nic.mparivahan.MyTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="right" android:id="@+id/txt_chassis_no_value" android:layout_width="0dp" android:layout_height="wrap_content" android:text="XXXXX" android:layout_weight="1" android:fontFamily="@font/nexgenttf"/>
                    </LinearLayout>
                    <com.nic.mparivahan.MyTextView android:textSize="14sp" android:textColor="@color/black" android:gravity="center" android:layout_gravity="center" android:id="@+id/defaultOtpTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="@dimen/_12sdp" android:layout_marginRight="8dp" android:text="Enter OTP in below field that was sent to registered mobile number." android:fontFamily="@font/nexgenttf" android:layout_marginHorizontal="8dp"/>
                    <com.nic.mparivahan.MyTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_12sdp" android:text="@string/enter_otp" android:fontFamily="@font/nexgenttf"/>
                    <FrameLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
                        <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/_12ssp" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/et_otp" android:background="@drawable/sign_in_back" android:padding="15dp" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter OTP" android:maxLength="6" android:inputType="numberPassword" android:textIsSelectable="false" android:fontFamily="@font/nexgenttf"/>
                        <LinearLayout android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:layout_width="wrap_content" android:layout_height="match_parent">
                            <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/showPassword" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="5dp" android:src="@drawable/mvvm_visibility"/>
                        </LinearLayout>
                    </FrameLayout>
                    <TextView android:textSize="16sp" android:textColor="@color/gray" android:layout_gravity="center" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="20dp" android:layout_marginRight="10dp" android:text="@string/wait_for_otp" android:fontFamily="@font/nexgenttf"/>
                    <TextView android:textSize="16sp" android:textColor="@color/gray" android:layout_gravity="center" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="@string/ref_close" android:fontFamily="@font/nexgenttf"/>
                    <com.nic.mparivahan.MyTextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/light_cyan" android:gravity="center" android:id="@+id/txt_resend_otp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/resend_otp" android:fontFamily="@font/nexgenttf"/>
                    <com.nic.mparivahan.MyTextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/never_mix" android:gravity="center" android:id="@+id/time_text" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:fontFamily="@font/nexgenttf"/>
                    <androidx.appcompat.widget.AppCompatButton android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/btnVerify" android:background="@drawable/button_cyan_theme" android:layout_width="match_parent" android:layout_height="@dimen/_40sdp" android:layout_marginTop="@dimen/_30sdp" android:minHeight="50dp" android:text="@string/verify" android:textAllCaps="false"/>
                    <androidx.appcompat.widget.AppCompatButton android:textSize="16sp" android:textStyle="bold" android:textColor="@color/light_cyan" android:gravity="center" android:layout_gravity="center" android:id="@+id/btnCancel" android:background="@drawable/button_cyan_border_theme" android:layout_width="match_parent" android:layout_height="@dimen/_40sdp" android:layout_marginTop="@dimen/_20sdp" android:minHeight="50dp" android:text="@string/cancel" android:shadowColor="@color/dark_grey" android:textAllCaps="false"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
