<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:startColor="#ebf2f5" android:endColor="#ebf2f5" android:angle="90" android:type="linear"/>
                    <corners android:radius="10dp"/>
                    <margin android:left="5dp"/>
                    <padding android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp"/>
                </shape>
            </item>
            <item android:right="5dp">
                <bitmap android:gravity="right|center_vertical|center_horizontal|center" android:src="@drawable/drop_arrow"/>
            </item>
        </layer-list>
    </item>
</selector>
