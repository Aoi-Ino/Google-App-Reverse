<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/light_gray" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <include android:id="@+id/header_acc_report" layout="@layout/mvvm_header"/>
            <LinearLayout android:gravity="top|left|center_vertical|center_horizontal|center" android:orientation="vertical" android:background="@drawable/mvvm_linear" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:baselineAligned="false">
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="3dp" android:paddingBottom="3dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp">
                        <androidx.cardview.widget.CardView android:layout_gravity="center" android:id="@+id/cv_report_complaint" android:layout_width="match_parent" android:layout_height="110dp" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:layout_weight="1" app:cardCornerRadius="20dp">
                            <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" app:cardCornerRadius="20dp" app:elevation="0dp" app:strokeWidth="2dp">
                                <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_reg_complaint" android:background="@color/never_mix" android:layout_width="match_parent" android:layout_height="match_parent">
                                    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_report_accident_selected"/>
                                    <TextView android:textSize="12dp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/logo_reg_acc_repo" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/register_report" android:fontFamily="@font/poppins_regular"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </androidx.cardview.widget.CardView>
                        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="110dp" android:layout_marginLeft="15dp" android:layout_marginRight="10dp" android:layout_weight="1" app:cardCornerRadius="20dp" app:elevation="0dp" app:strokeColor="@color/gray" app:strokeWidth="2dp">
                            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_dashboard" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
                                <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_report_accident"/>
                                <TextView android:textSize="12dp" android:textColor="@color/black" android:gravity="center" android:id="@+id/logo_dashboard" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Dashboard" android:fontFamily="@font/poppins_regular"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView android:id="@+id/cv_complaint_status" android:layout_width="match_parent" android:layout_height="110dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp" android:layout_weight="1" app:cardCornerRadius="20dp" app:elevation="0dp" app:strokeColor="@color/gray" app:strokeWidth="2dp">
                            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_comp_history" android:layout_width="match_parent" android:layout_height="match_parent">
                                <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_report_accident"/>
                                <TextView android:textSize="12dp" android:textColor="@color/black" android:gravity="center" android:id="@+id/logo_repo_acc_hist" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Reported Accident History" android:fontFamily="@font/poppins_regular"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView android:textSize="@dimen/_10ssp" android:textColor="@color/newred" android:id="@+id/tv_note" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/_16sdp" android:layout_marginRight="@dimen/_16sdp" android:text="*Note: Video size must be equal or less than 8 MB" android:fontFamily="@font/roboto_medium" android:layout_marginHorizontal="@dimen/_16sdp"/>
                        <LinearLayout android:orientation="horizontal" android:id="@+id/parent_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/_16sdp" android:layout_marginTop="12dp" android:layout_marginRight="@dimen/_16sdp" android:layout_weight="2" android:layout_marginHorizontal="@dimen/_16sdp">
                            <ImageButton android:id="@+id/ibImagePicker" android:background="@drawable/image_button_style" android:padding="15dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:srcCompat="@drawable/ic_photo_add"/>
                            <ImageButton android:id="@+id/ibVideoPicker" android:background="@drawable/image_button_style" android:padding="15dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="13dp" android:layout_weight="1" app:srcCompat="@drawable/ic_video_add"/>
                        </LinearLayout>
                        <TextView android:id="@+id/tv_vehicle_no" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Vehicle No. (Max. 10 Characters)" android:layout_marginStart="23dp"/>
                        <EditText android:textSize="14sp" android:textColor="@color/gray" android:id="@+id/ev_vehicle_no" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:hint="@string/enter_rc_no_for_pending_transaction" android:maxLines="1" android:maxLength="10" android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890" android:inputType="textCapCharacters" android:imeOptions="actionNext" android:textCursorDrawable="@color/blue"/>
                        <TextView android:id="@+id/tv_location" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Accident Location (Max. 250 Characters)" android:layout_marginStart="23dp"/>
                        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <EditText android:textSize="16sp" android:textColor="@color/gray" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/ev_location" android:background="@drawable/edit_text_style" android:padding="10dp" android:paddingLeft="5dp" android:paddingRight="5dp" android:focusable="false" android:clickable="false" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="0sp" android:layout_marginTop="5dp" android:layout_marginRight="0dp" android:minHeight="75dp" android:ems="10" android:maxLength="250" android:imeOptions="actionNext" android:textCursorDrawable="@color/blue"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                                <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                                    <TextView android:id="@+id/tv_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Date" android:layout_marginStart="23dp"/>
                                    <TextView android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/ev_calender_picker" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:minHeight="45dp" android:ems="10" android:drawableRight="@drawable/c21" android:textCursorDrawable="@color/blue" android:drawableEnd="@drawable/c21"/>
                                </LinearLayout>
                                <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                                    <TextView android:id="@+id/tv_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Time" android:layout_marginStart="23dp"/>
                                    <TextView android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/ev_time_picker" android:background="@drawable/edit_text_style" android:padding="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:minHeight="45dp" android:ems="10" android:drawableRight="@drawable/ic_time" android:textCursorDrawable="@color/blue" android:drawableEnd="@drawable/ic_time"/>
                                </LinearLayout>
                            </LinearLayout>
                            <ProgressBar android:layout_gravity="center" android:id="@+id/acc_progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </FrameLayout>
                        <TextView android:id="@+id/tv_state" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="20dp" android:text="State"/>
                        <LinearLayout android:gravity="center" android:layout_gravity="left|center_vertical|center_horizontal|center" android:background="@drawable/edit_text_style" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp">
                            <androidx.appcompat.widget.AppCompatSpinner android:id="@+id/spn_state" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/_35sdp" android:textAllCaps="true"/>
                        </LinearLayout>
                        <TextView android:id="@+id/tv_comment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Comment (Max. 500 Characters)" android:layout_marginStart="23dp"/>
                        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" app:boxBackgroundColor="@color/grey" app:boxStrokeColor="@color/grey" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <EditText android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/editTextTextPersonName11" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="85dp" android:ems="10" android:maxLength="500" android:inputType="textCapCharacters" android:imeOptions="actionDone" android:textCursorDrawable="@color/blue"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <androidx.appcompat.widget.AppCompatButton android:textColor="@color/white" android:id="@+id/submit_acc_report" android:background="@drawable/gradient_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="23dp" android:layout_marginBottom="23dp" android:text="Register" android:textAllCaps="false" android:layout_marginStart="23dp" android:layout_marginEnd="23dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
