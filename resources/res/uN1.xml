<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" app:cardCornerRadius="20dp" app:elevation="0dp">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="17dp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="20dp" android:text="Complaint History"/>
            <androidx.cardview.widget.CardView android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="18dp" android:layout_marginBottom="25dp" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" app:cardCornerRadius="10dp">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatButton android:textColor="@color/white" android:background="@drawable/gradient_background" android:layout_width="0dp" android:layout_height="wrap_content" android:text="In Progress" android:layout_weight="1"/>
                    <androidx.appcompat.widget.AppCompatButton android:textColor="@color/black" android:background="@color/white" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Done" android:layout_weight="1"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:textSize="14sp" android:textColor="@color/black" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/ev_start_date" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:minHeight="50dp" android:hint="Start Date" android:layout_weight="1"/>
                <TextView android:textSize="14sp" android:textColor="@color/black" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/ev_end_date" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:minHeight="50dp" android:hint="End Date" android:layout_weight="1"/>
                <LinearLayout android:id="@+id/image_search" android:background="@drawable/sign_in_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
                    <ImageView android:padding="0dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/icons"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/lv_complaint_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
