<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="top" android:orientation="vertical" android:background="@drawable/dashboard" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="300dp" android:minHeight="350dp">
    <LinearLayout android:gravity="right" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <ImageView android:id="@+id/pop_up_close" android:background="@drawable/cross_icon" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center" android:id="@+id/disPlay" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/otp_verification" android:fontFamily="@font/poppins_regular"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/gray" android:gravity="center" android:id="@+id/disPlay_mobile" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginBottom="20dp" android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/verifyOtpLl" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:baselineAligned="false">
        <com.nic.mparivahan.MyTextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/enter_otp_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/enter_otp" android:fontFamily="@font/nexgenttf"/>
        <FrameLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="@dimen/_40sdp" android:layout_marginTop="5dp">
            <EditText android:textSize="14dp" android:id="@+id/enterOtp" android:background="@drawable/sign_in_back" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/_40sdp" android:layout_marginTop="3dp" android:hint="@string/enter_otp" android:maxLength="6" android:digits="0123456789" android:inputType="numberPassword" android:imeOptions="actionDone" android:fontFamily="@font/poppins_regular" android:importantForAutofill="2"/>
            <LinearLayout android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:layout_width="70dp" android:layout_height="@dimen/_64sdp">
                <ImageView android:id="@+id/showmpin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mvvm_visibility"/>
            </LinearLayout>
            <ProgressBar android:layout_gravity="center" android:id="@+id/pr_pwm" android:visibility="gone" android:layout_width="@dimen/_60sdp" android:layout_height="@dimen/_60sdp"/>
        </FrameLayout>
        <com.nic.mparivahan.MyTextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/never_mix" android:gravity="center" android:id="@+id/time_text" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:fontFamily="@font/nexgenttf"/>
        <com.nic.mparivahan.MyTextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/never_mix" android:gravity="center" android:id="@+id/resendOtp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/resend_otp" android:fontFamily="@font/nexgenttf"/>
    </LinearLayout>
    <LinearLayout android:gravity="bottom" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/verifyOtpBtn" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="30dp" android:layout_marginRight="10dp" android:layout_marginBottom="15dp">
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/txt_reset" android:background="@drawable/button_style" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:minHeight="50dp" android:text="@string/reset" android:layout_weight="1"/>
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/submitOtp" android:background="@drawable/button_style" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:minHeight="50dp" android:text="@string/submit" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
