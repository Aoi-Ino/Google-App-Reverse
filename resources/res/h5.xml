<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/light_gray" android:layout_width="match_parent" android:layout_height="match_parent" android:baselineAligned="false">
    <include android:id="@+id/top_back" layout="@layout/vahan_echallan_header"/>
    <ScrollView android:background="@drawable/mvvm_linear" android:fitsSystemWindows="true" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/_10sdp" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:baselineAligned="false" android:layout_marginHorizontal="16dp">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="18sp" android:textColor="@color/firefly" android:ellipsize="end" android:gravity="start" android:id="@+id/titleTv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="CheckPost Receipt Status" android:maxLines="1" android:fontFamily="@font/poppins_semi_bold"/>
            <LinearLayout android:id="@+id/noticeServiceLl" android:background="@drawable/corner_circle_14_selected" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="16dp">
                <RadioButton android:textSize="14sp" android:textColor="@color/firefly" android:layout_gravity="center_vertical" android:id="@+id/noticeNoRb" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:checked="true" android:text="Receipt Number" android:fontFamily="@font/lato" android:layout_marginStart="20dp" android:paddingHorizontal="20dp"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/vehicleNoLl" android:background="@drawable/corner_circle_bg_14" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="10dp">
                <RadioButton android:textSize="14sp" android:textColor="@color/firefly" android:layout_gravity="center_vertical" android:id="@+id/vehicleNoRb" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:checked="false" android:text="@string/echallan_vehicle_number" android:fontFamily="@font/lato" android:layout_marginStart="20dp" android:paddingHorizontal="20dp"/>
            </LinearLayout>
            <EditText android:textSize="14sp" android:textColorHint="#aab7bf" android:id="@+id/inputEt" android:background="@drawable/circle_bg_corner_14_catskill_white" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="16dp" android:hint="Enter Receipt Number" android:cursorVisible="true" android:maxLines="1" android:singleLine="true" android:maxLength="15" android:inputType="textCapCharacters" android:imeOptions="actionDone" android:fontFamily="@font/lato" android:paddingStart="10dp" android:importantForAutofill="2"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/vehicleDetailsLl" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:baselineAligned="false">
                <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/_13sdp" android:textColor="@color/firefly" android:ellipsize="end" android:gravity="start" android:id="@+id/taxhead" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="For State" android:maxLines="1"/>
                <FrameLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="45dp" android:layout_below="@+id/state">
                    <Spinner android:id="@+id/state_spinner" android:background="@drawable/sign_in_back" android:padding="8dp" android:paddingTop="@dimen/_7sdp" android:paddingBottom="@dimen/_7sdp" android:layout_width="match_parent" android:layout_height="match_parent" android:spinnerMode="dialog" android:paddingVertical="@dimen/_7sdp"/>
                    <LinearLayout android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:padding="8dp" android:paddingTop="@dimen/_7sdp" android:paddingBottom="@dimen/_7sdp" android:layout_width="@dimen/_40sdp" android:layout_height="match_parent" android:paddingVertical="@dimen/_7sdp">
                        <ImageView android:layout_gravity="center_vertical" android:id="@+id/tax_mode_icon" android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/ic_arrow_down"/>
                    </LinearLayout>
                </FrameLayout>
                <EditText android:textSize="14sp" android:textColorHint="#aab7bf" android:id="@+id/enter_vehicle_number" android:background="@drawable/circle_bg_corner_14_catskill_white" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="16dp" android:hint="Enter Vehicle Number" android:cursorVisible="true" android:maxLines="1" android:maxLength="15" android:inputType="textCapCharacters" android:imeOptions="actionDone" android:textAllCaps="true" android:fontFamily="@font/lato" android:paddingStart="10dp" android:importantForAutofill="2"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/getDetailsTv" android:background="@drawable/corner_rectangle_bg_17" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="30dp" android:text="@string/get_details" android:maxLines="1" android:fontFamily="@font/nexgenttf" android:elevation="3dp" android:paddingVertical="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
