<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:id="@+id/cv_report_traffic_violation_page" android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:id="@+id/sv_report_traffic_violation_page" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_report_traffic_violation_page" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:textSize="26sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tv_report_traffic_violation" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:text="@string/report_traffic_violation"/>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="3dp" android:paddingBottom="3dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp">
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="110dp" android:layout_marginLeft="15dp" android:layout_marginRight="10dp" android:layout_weight="1" app:cardCornerRadius="20dp" app:elevation="0dp" app:strokeColor="@color/gray" app:strokeWidth="2dp">
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_dashboard" android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_receipt"/>
                            <TextView android:textSize="13dp" android:textColor="@color/gray" android:gravity="center" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Dashboard"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <androidx.cardview.widget.CardView android:layout_gravity="center" android:id="@+id/cv_report_complaint" android:layout_width="match_parent" android:layout_height="110dp" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:layout_weight="1" app:cardCornerRadius="20dp">
                        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" app:cardCornerRadius="20dp" app:elevation="0dp" app:strokeWidth="2dp">
                            <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@color/never_mix" android:layout_width="match_parent" android:layout_height="match_parent">
                                <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_citizen_sentinel_selected"/>
                                <TextView android:textSize="13sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Register Complaint"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </androidx.cardview.widget.CardView>
                    <com.google.android.material.card.MaterialCardView android:id="@+id/cv_complaint_status" android:layout_width="match_parent" android:layout_height="110dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp" android:layout_weight="1" app:cardCornerRadius="20dp" app:elevation="0dp" app:strokeColor="@color/gray" app:strokeWidth="2dp">
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_accident_report"/>
                            <TextView android:textSize="13dp" android:textColor="@color/gray" android:gravity="center" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/comp_status"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                <View android:background="@color/grey" android:visibility="gone" android:layout_width="match_parent" android:layout_height="4dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"/>
                <androidx.cardview.widget.CardView android:visibility="gone" android:layout_width="match_parent" android:layout_height="220dp" android:layout_marginTop="20dp" android:layout_marginBottom="12dp" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" app:cardCornerRadius="20dp">
                    <com.google.android.gms.maps.MapView android:id="@+id/mapv_report_traffic_violation_page" android:layout_width="match_parent" android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                    <ImageButton android:id="@+id/ib_videoPicker" android:background="@drawable/image_button_style" android:padding="15dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:srcCompat="@drawable/ic_video_add"/>
                    <ImageButton android:id="@+id/ib_imagePicker" android:background="@drawable/image_button_style" android:padding="15dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:srcCompat="@drawable/ic_photo_add"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="20dp" android:text="Violation Type"/>
                    <LinearLayout android:gravity="center" android:layout_gravity="left|center_vertical|center_horizontal|center" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp">
                        <androidx.appcompat.widget.AppCompatSpinner android:gravity="center" android:id="@+id/app_option" android:background="@drawable/offence_spinner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:minWidth="50dp" android:minHeight="39dp" android:spinnerMode="dialog"/>
                    </LinearLayout>
                    <TextView android:id="@+id/tv_vehicle_no" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Vehicle No. (Max.10 Characters)"/>
                    <EditText android:textSize="16sp" android:textColor="@color/gray" android:id="@+id/ev_vehicle_no" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:hint="@string/enter_rc_no_for_pending_transaction" android:maxLines="1" android:maxLength="10" android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890" android:inputType="textCapCharacters" android:imeOptions="actionNext" android:textCursorDrawable="@color/blue"/>
                    <TextView android:id="@+id/tv_location" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Offence Location (Max. 250 Characters)"/>
                    <EditText android:textSize="16sp" android:textColor="@color/gray" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/ev_location" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20sp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:minHeight="75dp" android:ems="10" android:maxLength="250" android:inputType="textMultiLine" android:imeOptions="actionNext" android:textCursorDrawable="@color/blue"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView android:id="@+id/tv_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Date"/>
                            <TextView android:textSize="16sp" android:textColor="@color/gray" android:id="@+id/ev_calender_picker" android:background="@drawable/edit_text_style" android:padding="10dp" android:focusable="false" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:ems="10" android:drawableRight="@drawable/ic_calendar" android:inputType="none" android:textCursorDrawable="@color/blue" android:drawableEnd="@drawable/ic_calendar"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView android:id="@+id/textView11111" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="18dp" android:text="Time" android:layout_marginStart="23dp"/>
                            <EditText android:textSize="16sp" android:textColor="@color/gray" android:id="@+id/ev_time_picker" android:background="@drawable/edit_text_style" android:padding="10dp" android:focusable="false" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="20sp" android:ems="10" android:drawableRight="@drawable/ic_time" android:inputType="none" android:imeOptions="actionDone" android:textCursorDrawable="@color/blue" android:drawableEnd="@drawable/ic_time"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="20dp" android:text="@string/state"/>
                    <LinearLayout android:gravity="center" android:layout_gravity="left|center_vertical|center_horizontal|center" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp">
                        <androidx.appcompat.widget.AppCompatSpinner android:gravity="center" android:id="@+id/spn_state" android:background="@drawable/offence_spinner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:minWidth="50dp" android:minHeight="39dp" android:spinnerMode="dialog"/>
                    </LinearLayout>
                    <TextView android:id="@+id/textView2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Comment (Max. 500 Characters)"/>
                    <EditText android:textSize="16sp" android:textColor="@color/gray" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/editTextTextPersonName11" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:minHeight="75dp" android:ems="10" android:maxLength="500" android:inputType="textMultiLine" android:textCursorDrawable="@color/blue"/>
                    <androidx.appcompat.widget.AppCompatButton android:textColor="@color/white" android:id="@+id/complain_reg" android:background="@drawable/gradient_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="23dp" android:layout_marginBottom="23dp" android:text="Register" android:layout_marginStart="23dp" android:layout_marginEnd="23dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>
