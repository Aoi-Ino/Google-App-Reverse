<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/light_gray" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <include android:id="@+id/mvvHeader" layout="@layout/mvvm_header"/>
        <androidx.core.widget.NestedScrollView android:gravity="top|left|center_vertical|center_horizontal|center" android:orientation="vertical" android:background="@drawable/mvvm_linear" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:background="@drawable/mvvm_linear" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="10dp">
                    <TextView android:textSize="@dimen/_14ssp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/txtRasieComp" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Raise a complaint" android:fontFamily="@font/lato"/>
                    <Spinner android:gravity="start" android:entries="@array/complaints_type" android:id="@+id/spinner_complaint_type" android:background="@drawable/spinner" android:paddingTop="6dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="12dp" android:spinnerMode="dialog" android:textAlignment="textStart"/>
                    <Spinner android:gravity="start" android:entries="@array/complaints_type" android:id="@+id/spinner_sub_complaint" android:background="@drawable/spinner" android:paddingTop="6dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="8dp" android:spinnerMode="dialog" android:textAlignment="textStart"/>
                    <Spinner android:gravity="start" android:entries="@array/transport_service_complaint" android:id="@+id/spinner_sub_sub_complaint" android:background="@drawable/spinner" android:paddingTop="6dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="8dp" android:spinnerMode="dialog" android:textAlignment="textStart"/>
                    <com.google.android.material.textfield.TextInputLayout android:id="@+id/vehicleNumberLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:hint="Vehicle Number" app:boxCornerRadiusBottomEnd="16dp" app:boxCornerRadiusBottomStart="16dp" app:boxCornerRadiusTopEnd="16dp" app:boxCornerRadiusTopStart="16dp" app:boxStrokeColor="#0fb1fa" app:hintTextColor="#0fb1fa" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText android:textSize="13sp" android:id="@+id/et_vehicle_number" android:layout_width="match_parent" android:layout_height="50dp" android:digits="1234567890QWERTYUIOPASDFGHJKLZXCVBNM" android:inputType="textCapCharacters" android:fontFamily="@font/lato" android:backgroundTint="@color/white"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout android:id="@+id/applicationNumberLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:hint="Application Number" app:boxCornerRadiusBottomEnd="16dp" app:boxCornerRadiusBottomStart="16dp" app:boxCornerRadiusTopEnd="16dp" app:boxCornerRadiusTopStart="16dp" app:boxStrokeColor="#0fb1fa" app:hintTextColor="#0fb1fa" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText android:textSize="13sp" android:id="@+id/et_application_number" android:layout_width="match_parent" android:layout_height="50dp" android:digits="QWERTYUIOPASDFGHJKLZXCVBNM1234567890" android:inputType="textCapCharacters" android:fontFamily="@font/lato" android:backgroundTint="@color/white"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout android:id="@+id/textInputLayoutDescription" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:hint="Enter Remarks" android:elevation="4dp" app:boxCornerRadiusBottomEnd="16dp" app:boxCornerRadiusBottomStart="16dp" app:boxCornerRadiusTopEnd="16dp" app:boxCornerRadiusTopStart="16dp" app:boxStrokeColor="#0fb1fa" app:errorEnabled="true" app:errorTextColor="@color/red_new" app:hintTextColor="#0fb1fa" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText android:textSize="14sp" android:gravity="top|left|center_vertical|center_horizontal|center|start" android:id="@+id/et_remarks" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="80dp" android:maxLength="300" android:drawablePadding="8dp" android:inputType="none|text|textAutoCorrect|textMultiLine" android:fontFamily="@font/lato"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView android:textSize="10sp" android:textColor="#16cc4d" android:id="@+id/tvDescriptionLetterCounter" android:layout_width="wrap_content" android:layout_height="14dp" android:layout_margin="5dp" android:text="0/300" app:layout_constraintBottom_toBottomOf="@+id/textInputLayoutDescription" app:layout_constraintEnd_toEndOf="@+id/textInputLayoutDescription"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:id="@+id/tv_file_name" android:layout_width="0dp" android:layout_height="wrap_content" android:fontFamily="@font/nexgenttf" android:layout_marginEnd="18dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/btn_attach" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                        <com.google.android.material.button.MaterialButton android:layout_gravity="end" android:id="@+id/btn_attach" android:layout_width="wrap_content" android:layout_height="50dp" android:text="Attach" android:textAllCaps="false" android:fontFamily="@font/lato" android:backgroundTint="#0fb1fa" app:icon="@drawable/ic_baseline_attachment_24" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <com.google.android.material.button.MaterialButton android:id="@+id/btn_raise_complaint" android:visibility="visible" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="12dp" android:text="Raise a complaint" android:textAllCaps="false" android:fontFamily="@font/lato" android:backgroundTint="#0fb1fa" app:cornerRadius="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>
