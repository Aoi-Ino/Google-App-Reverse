<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:id="@+id/cv_report_accident_page" android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:id="@+id/sv_report_accident_page" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_report_accident_page" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:textSize="26sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tv_report_accident_page" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="30dp" android:text="@string/report_traffic_violation" android:layout_marginStart="23dp"/>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                    <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="110dp" android:layout_marginLeft="20dp" android:layout_marginRight="15dp" android:layout_weight="1" app:cardCornerRadius="20dp" app:elevation="0dp" app:strokeColor="@color/dark_grey" app:strokeWidth="2dp">
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_dashboard" android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_receipt"/>
                            <TextView android:textColor="@color/black" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/dashboard"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView android:id="@+id/cv_complaint_status" android:layout_width="0dp" android:layout_height="110dp" android:layout_marginLeft="20dp" android:layout_marginRight="10dp" android:layout_weight="1" app:cardCornerRadius="20dp" app:elevation="0dp" app:strokeWidth="2dp">
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@color/vehicle_fit" android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_citizen_sentinel_selected"/>
                            <TextView android:textColor="@color/white" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Register Accident Report"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="110dp" android:layout_marginLeft="20dp" android:layout_marginRight="10dp" android:layout_weight="1" app:cardCornerRadius="20dp" app:elevation="0dp" app:strokeColor="@color/dark_grey" app:strokeWidth="2dp">
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_acc_report" android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_accident_report"/>
                            <TextView android:textColor="@color/black" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="@string/acc_history"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                <View android:background="@color/grey" android:layout_width="match_parent" android:layout_height="4dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"/>
                <androidx.cardview.widget.CardView android:visibility="gone" android:layout_width="match_parent" android:layout_height="180dp" android:layout_marginTop="0dp" android:layout_marginBottom="12dp" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" app:cardCornerRadius="20dp">
                    <com.google.android.gms.maps.MapView android:id="@+id/mapv_report_traffic_violation_page" android:layout_width="match_parent" android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                    <ImageButton android:id="@+id/ib_videoPicker" android:background="@drawable/image_button_style" android:padding="15dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="23dp" android:layout_marginRight="6dp" android:src="@drawable/ic_video_add" android:layout_weight="1" android:layout_marginStart="23dp" android:layout_marginEnd="6dp"/>
                    <ImageButton android:id="@+id/ib_imagePicker" android:background="@drawable/image_button_style" android:padding="15dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="6dp" android:layout_marginRight="23dp" android:src="@drawable/ic_photo_add" android:layout_weight="1" android:layout_marginStart="6dp" android:layout_marginEnd="23dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView android:id="@+id/tv_vehicle_no" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Vehicle No. (Max.10 Characters)" android:layout_marginStart="23dp"/>
                    <EditText android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/ev_vehicle_no" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:ems="10" android:maxLength="10" android:inputType="text" android:imeOptions="actionNext" android:textCursorDrawable="@color/blue"/>
                    <TextView android:id="@+id/tv_location" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Accident Location (Max. 250 Characters)" android:layout_marginStart="23dp"/>
                    <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <EditText android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/ev_location" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:minHeight="85dp" android:ems="10" android:maxLength="250" android:inputType="textPersonName" android:textCursorDrawable="@color/blue"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView android:id="@+id/tv_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Date" android:layout_marginStart="23dp"/>
                            <TextView android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/ev_calender_picker" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:minHeight="45dp" android:ems="10" android:drawableRight="@drawable/ic_calendar" android:textCursorDrawable="@color/blue" android:drawableEnd="@drawable/ic_calendar"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView android:id="@+id/textView11111" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Time" android:layout_marginStart="23dp"/>
                            <TextView android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/ev_time_picker" android:background="@drawable/edit_text_style" android:padding="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:minHeight="45dp" android:ems="10" android:drawableRight="@drawable/ic_time" android:textCursorDrawable="@color/blue" android:drawableEnd="@drawable/ic_time"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView android:id="@+id/textView2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="18dp" android:text="Comment (Max. 500 Characters)" android:layout_marginStart="23dp"/>
                    <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" app:boxBackgroundColor="@color/grey" app:boxStrokeColor="@color/grey" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <EditText android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/editTextTextPersonName11" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="85dp" android:ems="10" android:maxLength="500" android:inputType="text" android:imeOptions="actionDone" android:textCursorDrawable="@color/blue"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.appcompat.widget.AppCompatButton android:textColor="@color/white" android:id="@+id/submit_acc_report" android:background="@drawable/gradient_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="23dp" android:layout_marginBottom="23dp" android:text="Register" android:layout_marginStart="23dp" android:layout_marginEnd="23dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>
