<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.nic.mparivahan.MyTextView android:textSize="13dp" android:textStyle="normal" android:textColor="#071219" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/driving_license_no" android:fontFamily="@font/nexgenttf"/>
    <EditText android:textSize="13dp" android:textColorHint="@color/dl_service_color" android:id="@+id/dl_number" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="8dp" android:text="WB01 20010113523" android:hint="@string/enter_driving_license_no" android:maxLength="16" android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-/ " android:inputType="textCapCharacters"/>
    <androidx.appcompat.widget.AppCompatTextView android:textSize="13dp" android:textStyle="normal" android:textColor="#071219" android:id="@+id/chassi_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/date_of_birth" android:fontFamily="@font/nexgenttf"/>
    <EditText android:textSize="13dp" android:textColorHint="@color/dl_service_color" android:id="@+id/dl_dob" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="8dp" android:text="1979-10-06" android:hint="@string/enter_date_of_birth" android:maxLength="10"/>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/edit_text_style" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="8dp" android:weightSum="1">
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:weightSum="1" android:layout_weight="1">
            <EditText android:textSize="15sp" android:textColor="@color/text_color" android:gravity="center_vertical" android:id="@+id/dobDateMain" android:padding="10dp" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/dd" android:maxLength="2" android:inputType="number" android:backgroundTint="@color/white" style="@style/TextAppearance.AppCompat.Small"/>
            <TextView android:textSize="16sp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="-" android:layout_weight="0.05"/>
            <EditText android:textSize="15sp" android:textColor="@color/text_color" android:gravity="center_vertical" android:id="@+id/dobMonthMain" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/mm" android:maxLength="2" android:inputType="number" android:backgroundTint="@color/white" style="@style/TextAppearance.AppCompat.Small"/>
            <TextView android:textSize="16sp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="-" android:layout_weight="0.05"/>
            <EditText android:textSize="15sp" android:textColor="@color/text_color" android:gravity="center_vertical" android:id="@+id/dobYearMain" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/yyyy" android:maxLength="4" android:inputType="number" android:backgroundTint="@color/white" style="@style/TextAppearance.AppCompat.Small"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
