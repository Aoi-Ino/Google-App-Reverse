<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/layerlistexample" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <include android:id="@+id/topHolder" layout="@layout/vahan_echallan_header"/>
            <LinearLayout android:gravity="top|left|center_vertical|center_horizontal|center" android:orientation="vertical" android:background="@drawable/mvvm_linear" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.nic.mparivahan.MyTextView android:textSize="@dimen/_14ssp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/vahan_service_lable" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/vehicle_service"/>
                    <com.nic.mparivahan.MyTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/vehicle_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/vehicle_number"/>
                    <TextView android:textColor="@color/black" android:id="@+id/txt_vehicle_number" android:background="@drawable/sign_in_back" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:hint="@string/vehicle_number" android:textAllCaps="true"/>
                    <com.nic.mparivahan.MyTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/state" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/state"/>
                    <TextView android:textColor="@color/black" android:id="@+id/txt_state_name" android:background="@drawable/sign_in_back" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:textAllCaps="true"/>
                    <com.nic.mparivahan.MyTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/rto" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/rto"/>
                    <TextView android:textColor="@color/black" android:id="@+id/txt_rto" android:background="@drawable/sign_in_back" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:textAllCaps="true"/>
                    <CheckBox android:textSize="14sp" android:id="@+id/duplicate_rc" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/issue_of_duplicate_rc"/>
                    <CheckBox android:textSize="14sp" android:id="@+id/change_of_address" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:text="@string/change_of_address_in_rc"/>
                    <CheckBox android:textSize="14sp" android:id="@+id/trans_owner" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:text="@string/transfer_of_ownership"/>
                    <CheckBox android:textSize="14sp" android:id="@+id/hyper_add" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:text="@string/hypothecation_addition"/>
                    <CheckBox android:textSize="14sp" android:id="@+id/hyper_term" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:text="@string/hypothecation_termination"/>
                    <CheckBox android:textSize="14sp" android:id="@+id/hyper_con" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:text="@string/hypothecation_continuation"/>
                    <CheckBox android:textSize="14sp" android:id="@+id/rc_particular" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:text="@string/rc_particular"/>
                    <CheckBox android:textSize="14sp" android:id="@+id/noc_service" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:text="@string/no_objection_certificate_noc"/>
                    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="25dp" android:layout_marginRight="10dp">
                        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/txt_service_submit" android:background="@drawable/button_style" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:minHeight="50dp" android:text="@string/next" android:layout_weight="1"/>
                        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/txt_reset" android:background="@drawable/button_style" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:minHeight="50dp" android:text="@string/reset" android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
