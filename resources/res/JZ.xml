<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/light_gray" android:layout_width="match_parent" android:layout_height="match_parent" android:baselineAligned="false">
    <include layout="@layout/vahan_echallan_header"/>
    <ScrollView android:background="@drawable/mvvm_linear" android:fitsSystemWindows="true" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/_10sdp" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:baselineAligned="false" android:layout_marginHorizontal="16dp">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="18sp" android:textColor="@color/firefly" android:ellipsize="end" android:gravity="start" android:id="@+id/titleTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/notice_status" android:maxLines="1" android:fontFamily="@font/poppins_semi_bold"/>
            <LinearLayout android:id="@+id/noticeServiceLl" android:background="@drawable/corner_circle_14_selected" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="16dp">
                <RadioButton android:textSize="14sp" android:textColor="@color/firefly" android:layout_gravity="center_vertical" android:id="@+id/noticeNoRb" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:checked="true" android:text="@string/notice_number" android:fontFamily="@font/lato" android:layout_marginStart="20dp" android:paddingHorizontal="20dp"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/vehicleNoLl" android:background="@drawable/corner_circle_bg_14" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="10dp">
                <RadioButton android:textSize="14sp" android:textColor="@color/firefly" android:layout_gravity="center_vertical" android:id="@+id/vehicleNoRb" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:checked="false" android:text="@string/echallan_vehicle_number" android:fontFamily="@font/lato" android:layout_marginStart="20dp" android:paddingHorizontal="20dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/virtualrc_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
                <com.nic.mparivahan.MyTextView android:textSize="@dimen/_13ssp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tv_my_vehicle_list" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="My Vehicle(s)" android:layout_marginStart="10dp" style="@style/TextAppearance.AppCompat.Body2"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rec_rc_recycler" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
            </LinearLayout>
            <EditText android:textSize="14sp" android:textColorHint="#aab7bf" android:id="@+id/inputEt" android:background="@drawable/circle_bg_corner_14_catskill_white" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="16dp" android:hint="@string/enter_notice_number" android:cursorVisible="true" android:maxLines="1" android:maxLength="15" android:inputType="textCapCharacters" android:imeOptions="actionDone" android:textAllCaps="true" android:fontFamily="@font/lato" android:paddingStart="10dp" android:importantForAutofill="2"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/vehicleDetailsLl" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:baselineAligned="false">
                <TextView android:textSize="13sp" android:textColor="@color/black" android:id="@+id/tv_chassi_no" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Chassis No. (Enter last five digits)" android:fontFamily="@font/poppins_regular" android:paddingStart="5dp"/>
                <EditText android:textSize="14sp" android:textColorHint="#aab7bf" android:id="@+id/chasisEt" android:background="@drawable/circle_bg_corner_14_catskill_white" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="10dp" android:hint="@string/echallan_enter_chassis_number" android:cursorVisible="true" android:maxLines="1" android:maxLength="5" android:inputType="textCapCharacters" android:imeOptions="actionNext" android:textAllCaps="true" android:fontFamily="@font/lato" android:paddingStart="10dp" android:importantForAutofill="2"/>
                <TextView android:textSize="13sp" android:textColor="@color/black" android:id="@+id/tv_engine_no" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Engine No. (Enter last five digits)" android:fontFamily="@font/poppins_regular" android:paddingStart="5dp"/>
                <EditText android:textSize="14sp" android:textColorHint="#aab7bf" android:id="@+id/engineEt" android:background="@drawable/circle_bg_corner_14_catskill_white" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="10dp" android:hint="@string/echallan_enter_engine_number" android:cursorVisible="true" android:maxLines="1" android:maxLength="5" android:inputType="textCapCharacters" android:imeOptions="actionDone" android:textAllCaps="true" android:fontFamily="@font/lato" android:paddingStart="10dp" android:importantForAutofill="2"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/getDetailsTv" android:background="@drawable/corner_rectangle_bg_17" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="30dp" android:text="@string/get_details" android:maxLines="1" android:fontFamily="@font/lato" android:elevation="3dp" android:paddingVertical="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
