<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/transparent_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView android:paddingBottom="40dp" android:layout_width="match_parent" android:layout_height="match_parent" app:cardBackgroundColor="@android:color/white" app:cardCornerRadius="20dp" app:cardElevation="0dp" app:cardPreventCornerOverlap="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp">
            <TextView android:id="@+id/tv_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Name" android:fontFamily="@font/nexgenttf"/>
            <EditText android:id="@+id/full_name" android:background="@drawable/sign_in_back" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter the Full Name" android:maxLength="50" android:digits=" qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM." android:inputType="textPersonName"/>
            <TextView android:id="@+id/tv_phone_no" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="Phone Number" android:fontFamily="@font/nexgenttf"/>
            <EditText android:id="@+id/phone_number" android:background="@drawable/sign_in_back" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter the Mobile Number" android:maxLength="10" android:digits="0987654321" android:inputType="textPersonName"/>
            <TextView android:id="@+id/tv_relation" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="Relation" android:fontFamily="@font/nexgenttf"/>
            <Spinner android:id="@+id/select_spinner" android:background="@drawable/spinner_layout_signup" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="10dp" android:spinnerMode="dialog"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/save_button" android:background="@drawable/sign_in_new" android:layout_width="120dp" android:layout_height="40dp" android:layout_margin="25dp">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_update" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Update" android:fontFamily="sans-serif-light"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/closebutton" android:background="@drawable/sign_in_new" android:layout_width="120dp" android:layout_height="40dp" android:layout_margin="25dp">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Close" android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
