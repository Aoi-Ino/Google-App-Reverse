<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:startColor="#4bd4ff" android:endColor="#4bd4ff" android:angle="90" android:type="linear"/>
                    <stroke android:width="1dp" android:color="@color/white"/>
                    <corners android:radius="8dp"/>
                    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
                </shape>
            </item>
            <item android:right="0dp">
                <bitmap android:gravity="center" android:src="@drawable/user"/>
            </item>
        </layer-list>
    </item>
</selector>
