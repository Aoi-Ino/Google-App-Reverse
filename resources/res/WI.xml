<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/light_gray" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <include android:id="@+id/header_acc_history" layout="@layout/mvvm_header"/>
                <LinearLayout android:gravity="top|left|center_vertical|center_horizontal|center" android:orientation="vertical" android:background="@drawable/mvvm_linear" android:layout_width="match_parent" android:layout_height="match_parent">
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="3dp" android:paddingBottom="3dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp">
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_reg_complaint" android:background="@drawable/nexgendashboardmenu" android:layout_width="87dp" android:layout_height="105dp">
                                <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_citizen_sentinel"/>
                                <TextView android:textSize="12dp" android:textColor="@color/black" android:gravity="center" android:layout_gravity="center" android:id="@+id/logo_reg_compln" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Register Complaint" android:fontFamily="@font/poppins_regular"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_dashboard" android:background="@drawable/nexgendashboardmenu" android:layout_width="87dp" android:layout_height="105dp">
                                <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_receipt"/>
                                <TextView android:textSize="12dp" android:textColor="@color/black" android:gravity="center" android:id="@+id/logo_dashboard" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Dashboard" android:fontFamily="@font/poppins_regular"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_comp_history" android:background="@drawable/corner_rectangle_bg_17" android:layout_width="87dp" android:layout_height="105dp">
                                <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_onlinetax"/>
                                <TextView android:textSize="12dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/logo_compl_hist" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/comp_history" android:fontFamily="@font/poppins_regular"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" app:cardCornerRadius="20dp" app:elevation="0dp">
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="17dp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/title_compn_hist" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="20dp" android:text="Complaint History" android:fontFamily="@font/nexgenttf"/>
                            <androidx.cardview.widget.CardView android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="18dp" android:layout_marginBottom="25dp" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" app:cardCornerRadius="10dp">
                                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                                    <androidx.appcompat.widget.AppCompatButton android:textColor="@color/white" android:background="@drawable/gradient_background" android:layout_width="0dp" android:layout_height="wrap_content" android:text="In Progress" android:layout_weight="1"/>
                                    <androidx.appcompat.widget.AppCompatButton android:textColor="@color/black" android:background="@color/white" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Done" android:layout_weight="1"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
                                <TextView android:textSize="14sp" android:textColor="@color/black" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/ev_start_date" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="50dp" android:hint="Start Date" android:drawableRight="@drawable/c21" android:layout_weight="1"/>
                                <TextView android:textSize="14sp" android:textColor="@color/black" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/ev_end_date" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:minHeight="50dp" android:hint="End Date" android:drawableRight="@drawable/c21" android:layout_weight="1"/>
                            </LinearLayout>
                            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/txt_view_details" android:background="@drawable/sign_in_new" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:minHeight="50dp" android:text="@string/show" android:layout_weight="1"/>
                            <ProgressBar android:layout_gravity="center" android:id="@+id/traffic_his_progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <androidx.recyclerview.widget.RecyclerView android:id="@+id/lv_complaint_list" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>
