<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/light_gray" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <include android:id="@+id/header_acc_dash" layout="@layout/mvvm_header"/>
                <LinearLayout android:gravity="top|left|center_vertical|center_horizontal|center" android:orientation="vertical" android:background="@drawable/mvvm_linear" android:layout_width="match_parent" android:layout_height="match_parent">
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp">
                        <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="3dp" android:paddingBottom="3dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:weightSum="3">
                            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                                <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_reg_complaint" android:background="@drawable/nexgendashboardmenu" android:layout_width="87dp" android:layout_height="105dp">
                                    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_citizen_sentinel"/>
                                    <TextView android:textSize="12dp" android:textColor="@color/black" android:gravity="center" android:layout_gravity="center" android:id="@+id/logo_reg_compln" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Register Complaint" android:fontFamily="@font/poppins_regular"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                                <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_dashboard" android:background="@drawable/corner_rectangle_bg_17" android:layout_width="87dp" android:layout_height="105dp">
                                    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_onlinetax"/>
                                    <TextView android:textSize="12dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/logo_dashboard" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Dashboard" android:fontFamily="@font/poppins_regular"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                                <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_comp_history" android:background="@drawable/nexgendashboardmenu" android:layout_width="87dp" android:layout_height="105dp">
                                    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_accident_report"/>
                                    <TextView android:textSize="12dp" android:textColor="@color/black" android:gravity="center" android:id="@+id/logo_compl_hist" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/comp_history" android:fontFamily="@font/poppins_regular"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <androidx.cardview.widget.CardView android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" app:cardBackgroundColor="@color/white" app:cardCornerRadius="10dp">
                            <LinearLayout android:orientation="vertical" android:id="@+id/ll_last_record" android:layout_width="match_parent" android:layout_height="match_parent">
                                <TextView android:textSize="17dp" android:textColor="@color/black" android:id="@+id/title_report_violation" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Last Reported Violation" android:fontFamily="@font/nexgenttf"/>
                                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="5dp">
                                    <TextView android:textSize="14sp" android:textColor="@color/text_color" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/title_violationid" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Violation ID" android:layout_weight="1.5"/>
                                    <TextView android:textSize="14sp" android:textColor="@color/gray" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/txt_violation_id" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
                                </LinearLayout>
                                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="5dp">
                                    <TextView android:textSize="14sp" android:textColor="@color/text_color" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/title_vehicleno" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/vehicle_number" android:layout_weight="1.5"/>
                                    <TextView android:textSize="14sp" android:textColor="@color/gray" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/txt_vehicle_number" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
                                </LinearLayout>
                                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="5dp">
                                    <TextView android:textSize="14sp" android:textColor="@color/text_color" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/title_violationDate" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Date &amp; Time" android:layout_weight="1.5"/>
                                    <TextView android:textSize="14sp" android:textColor="@color/gray" android:id="@+id/txt_violation_date" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
                                </LinearLayout>
                                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="5dp">
                                    <TextView android:textSize="14sp" android:textColor="@color/text_color" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/title_status" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/status" android:layout_weight="1.5"/>
                                    <TextView android:textSize="14sp" android:textColor="@color/gray" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/txt_violation_status" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
                                </LinearLayout>
                                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginBottom="10dp">
                                    <TextView android:textSize="14sp" android:textColor="@color/text_color" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/title_location" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/location_txt" android:layout_weight="1.5"/>
                                    <TextView android:textSize="14sp" android:textColor="@color/gray" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/txt_violation_location" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:justificationMode="1"/>
                                </LinearLayout>
                                <TextView android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/txt_view_details" android:background="@color/never_mix" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="View Details"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/gray" android:gravity="center" android:id="@+id/txt_traffic_dashboard" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/traffic_state" android:justificationMode="1"/>
                        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/gray" android:gravity="center" android:id="@+id/txt_traffic_state" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/traffic_state_2" android:justificationMode="1"/>
                        <ProgressBar android:layout_gravity="top|center_vertical|center_horizontal|center" android:id="@+id/traffic_progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <androidx.cardview.widget.CardView android:id="@+id/ll_statistics" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:layout_marginTop="15dp" app:cardBackgroundColor="@color/white" app:cardCornerRadius="10dp">
                            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                                <TextView android:textSize="17dp" android:textColor="@color/black" android:id="@+id/title_statistics" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Statistics" android:fontFamily="@font/nexgenttf"/>
                                <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_records" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>
