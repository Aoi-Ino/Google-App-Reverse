<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/light_gray" android:layout_width="match_parent" android:layout_height="match_parent" android:baselineAligned="false">
    <include android:id="@+id/mHeader" layout="@layout/mvvm_header"/>
    <ScrollView android:gravity="top|left|center_vertical|center_horizontal|center" android:orientation="vertical" android:background="@drawable/mvvm_linear" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/_10sdp" android:fillViewport="true" android:layout_below="@+id/mHeader">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/_8sdp" android:baselineAligned="false">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="18sp" android:textColor="@color/firefly" android:ellipsize="end" android:gravity="start" android:id="@+id/topTitleTv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="Verify Payment Status" android:maxLines="1" android:fontFamily="@font/poppins_semi_bold"/>
            <LinearLayout android:id="@+id/transactionNoLl" android:background="@drawable/corner_circle_14_selected" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="10dp">
                <RadioButton android:textSize="14sp" android:textColor="@color/firefly" android:layout_gravity="center_vertical" android:id="@+id/transactionNoRb" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:checked="true" android:text="Application Number" android:layout_marginStart="20dp" android:paddingHorizontal="20dp"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/rcNoLl" android:background="@drawable/corner_circle_bg_14" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="10dp">
                <RadioButton android:textSize="14sp" android:textColor="@color/firefly" android:layout_gravity="center_vertical" android:id="@+id/rcNoRb" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:checked="false" android:text="Registration Number" android:layout_marginStart="20dp" android:paddingHorizontal="20dp"/>
            </LinearLayout>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/firstInputTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="Application Number" android:fontFamily="@font/nexgenttf"/>
            <EditText android:textSize="14sp" android:textColorHint="#aab7bf" android:id="@+id/inputEt" android:background="@drawable/circle_bg_corner_14_catskill_white" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:hint="Enter Application Number" android:cursorVisible="true" android:maxLines="1" android:maxLength="30" android:digits="QWERTYUIOPLKJHGFDSAZXCVBNM1234567890" android:inputType="textCapCharacters" android:imeOptions="actionDone" android:fontFamily="@font/robot_bold" android:importantForAutofill="2"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/chassisTv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_12sdp" android:text="Chassis No. (Last 5 digits)" android:fontFamily="@font/nexgenttf"/>
            <EditText android:textSize="14sp" android:textColorHint="#aab7bf" android:id="@+id/inputChasisEt" android:background="@drawable/circle_bg_corner_14_catskill_white" android:padding="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:hint="Enter Chassis Number" android:cursorVisible="true" android:maxLines="1" android:maxLength="5" android:digits="0987654321qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM*~" android:inputType="textCapCharacters" android:imeOptions="actionDone" android:fontFamily="@font/robot_bold"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/getDetailsTv" android:background="@drawable/corner_rectangle_bg_17" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="30dp" android:text="@string/get_details" android:maxLines="1" android:fontFamily="@font/robot_bold" android:elevation="3dp" android:paddingVertical="16dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
