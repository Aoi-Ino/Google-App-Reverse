<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/light_gray" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/topHolder" layout="@layout/vahan_echallan_header"/>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:fillViewport="true" android:layout_below="@+id/topHolder">
        <LinearLayout android:orientation="vertical" android:background="@drawable/mvvm_linear" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/topHolder">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="18sp" android:textColor="@color/firefly" android:ellipsize="end" android:gravity="start" android:id="@+id/titleTv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="30dp" android:layout_marginRight="16dp" android:text="@string/verify_challan_payment" android:maxLines="1" android:fontFamily="@font/poppins_semi_bold" android:layout_marginHorizontal="16dp"/>
            <FrameLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="15dp" android:layout_marginRight="16dp" android:layout_marginHorizontal="16dp">
                <androidx.appcompat.widget.AppCompatEditText android:id="@+id/numberEt" android:background="@drawable/circle_bg_corner_14_catskill_white" android:paddingLeft="20dp" android:paddingTop="15dp" android:paddingRight="20dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/enter_any_dl_no" android:maxLength="30" android:inputType="textCapCharacters" android:imeOptions="actionSearch" android:textAllCaps="true" android:paddingHorizontal="20dp" android:paddingVertical="15dp"/>
                <LinearLayout android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <com.nic.mparivahan.MyTextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/searchTv" android:background="@drawable/sign_in_new" android:paddingLeft="20dp" android:paddingTop="10dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="@string/search" android:fontFamily="sans-serif-light" android:layout_marginEnd="5dp" android:paddingHorizontal="20dp" android:paddingVertical="10dp"/>
                </LinearLayout>
            </FrameLayout>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="14sp" android:textColor="@color/firefly" android:ellipsize="end" android:gravity="start" android:id="@+id/totalChallanCountTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp" android:text="@string/total_challan" android:maxLines="1" android:fontFamily="@font/poppins_regular" android:layout_marginHorizontal="16dp"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="16sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/noChallanFoundTv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_16sdp" android:text="@string/no_transcation_found" android:fontFamily="@font/poppins_semi_bold"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/challanListRv" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/_16sdp" android:layout_marginTop="@dimen/_16sdp" android:layout_marginRight="@dimen/_16sdp" android:layout_marginHorizontal="@dimen/_16sdp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <ProgressBar android:id="@+id/progressBar" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp" android:layout_centerInParent="true"/>
</RelativeLayout>
