<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
    <LinearLayout android:orientation="vertical" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatTextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="Please Enter the Chassi Number" android:fontFamily="@font/nexgenttf"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="12dp" android:textColor="@color/black" android:id="@+id/vehicle_no" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="Vehicle No" android:fontFamily="@font/nexgenttf"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="12dp" android:layout_gravity="center_vertical" android:id="@+id/vehicle_number" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="3dp" android:singleLine="true" android:maxLength="10" android:inputType="textCapCharacters" android:fontFamily="@font/nexgenttf"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="12dp" android:textColor="@color/black" android:id="@+id/chasis_no_last_five_digits" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/chassis_no_last_five_digits" android:fontFamily="@font/nexgenttf"/>
        <androidx.appcompat.widget.AppCompatEditText android:textSize="12dp" android:id="@+id/chassi_number" android:background="@drawable/edit_text_style" android:padding="10dp" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="3dp" android:hint="@string/enter_last_five_digits" android:singleLine="true" android:maxLength="5" android:digits="1234567890qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM.*~-" android:inputType="textCapCharacters" android:imeOptions="actionDone"/>
        <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center" android:orientation="horizontal" android:id="@+id/close" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:background="@drawable/sign_in_new" android:layout_width="100dp" android:layout_height="45dp">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/close" android:fontFamily="@font/nexgenttf"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/okbuttondismiss" android:background="@drawable/sign_in_new" android:layout_width="100dp" android:layout_height="45dp" android:layout_marginLeft="5dp">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/okbuttontextview" android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ok_text" android:fontFamily="@font/nexgenttf"/>
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
