<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/light_gray" android:layout_width="match_parent" android:layout_height="match_parent" android:baselineAligned="false">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/topHolder" android:background="@color/light_gray" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/backIv" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/mvvm_back" android:layout_centerVertical="true"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/launcherIv" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="25dp" android:src="@drawable/ic_launcher" android:layout_toRightOf="@+id/backIv" android:layout_centerVertical="true" android:layout_marginStart="25dp" android:layout_toEndOf="@+id/backIv"/>
        <LinearLayout android:orientation="vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/notificationIv" android:layout_toRightOf="@+id/launcherIv" android:layout_toStartOf="@+id/notificationIv" android:layout_toEndOf="@+id/launcherIv">
            <com.nic.mparivahan.MyTextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NextGen"/>
            <com.nic.mparivahan.MyTextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/notificationIv" android:padding="5dp" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:src="@drawable/mvvm_alarm" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true" android:layout_marginHorizontal="10dp"/>
    </RelativeLayout>
    <ScrollView android:background="@drawable/mvvm_linear" android:fitsSystemWindows="true" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_below="@+id/topHolder">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:baselineAligned="false" android:layout_marginHorizontal="16dp">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="18sp" android:textColor="@color/firefly" android:ellipsize="end" android:gravity="start" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/payment_Status" android:maxLines="1" android:fontFamily="@font/poppins_semi_bold"/>
            <LinearLayout android:id="@+id/successLl" android:background="@drawable/corner_circle_14_selected" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="16dp">
                <RadioButton android:textSize="14sp" android:textColor="@color/firefly" android:layout_gravity="center_vertical" android:id="@+id/successRb" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:checked="true" android:text="@string/success" android:layout_marginStart="20dp" android:paddingHorizontal="20dp"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/pendingLl" android:background="@drawable/corner_circle_bg_14" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="16dp">
                <RadioButton android:textSize="14sp" android:textColor="@color/firefly" android:layout_gravity="center_vertical" android:id="@+id/pendingRb" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:checked="false" android:text="@string/pending_1" android:layout_marginStart="20dp" android:paddingHorizontal="20dp"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/failedLl" android:background="@drawable/corner_circle_bg_14" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="16dp">
                <RadioButton android:textSize="14sp" android:textColor="@color/firefly" android:layout_gravity="center_vertical" android:id="@+id/failedRb" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:checked="false" android:text="@string/failed" android:layout_marginStart="20dp" android:paddingHorizontal="20dp"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/submitTv" android:background="@drawable/corner_rectangle_bg_17" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="30dp" android:text="@string/submit" android:maxLines="1" android:fontFamily="@font/robot_bold" android:elevation="3dp" android:paddingVertical="16dp"/>
        </LinearLayout>
    </ScrollView>
    <ProgressBar android:id="@+id/progressBar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp" android:layout_centerInParent="true"/>
</RelativeLayout>
