<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/alert_shape" android:layout_width="match_parent" android:layout_height="80dp" android:layout_marginTop="10dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/linear_parent" android:layout_width="match_parent" android:layout_height="100dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="5">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="6">
                    <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="#5a5a5a" android:gravity="center_vertical" android:id="@+id/tv_vehicle_no" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="Vehicle No" android:layout_weight="4" android:fontFamily="@font/nexgenttf"/>
                    <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/delet_icon" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2">
                        <ImageView android:id="@+id/refresh" android:background="@drawable/ref_button" android:layout_width="23dp" android:layout_height="20dp"/>
                        <ImageView android:background="@drawable/delet_icon_dl" android:layout_width="18dp" android:layout_height="20dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:weightSum="2">
                <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="#071219" android:gravity="center_vertical" android:id="@+id/rc_number" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_weight="1" android:fontFamily="@font/nexgenttf"/>
                <TextView android:textSize="13dp" android:textStyle="bold" android:textColor="#09aeff" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/viewdetails" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:text="View Virtual RC" android:layout_weight="1" android:fontFamily="@font/nexgenttf"/>
            </LinearLayout>
        </LinearLayout>
        <ProgressBar android:id="@+id/progress_bar" android:visibility="gone" android:layout_width="50dp" android:layout_height="50dp" android:layout_centerInParent="true" android:progressTintMode="src_in"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
