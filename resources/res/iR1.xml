<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView android:id="@+id/cv_citizen_sentinel" android:layout_width="match_parent" android:layout_height="match_parent" app:cardBackgroundColor="@android:color/white" app:cardCornerRadius="20dp" app:cardElevation="0dp" app:cardPreventCornerOverlap="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_citizen_sentinel" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/tv_citizen_sentinel" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="29dp" android:layout_marginBottom="19dp" android:text="@string/citizen_sentinel" android:layout_marginStart="24dp"/>
            <com.google.android.material.card.MaterialCardView android:id="@+id/cv_report_traffic_violation" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="18dp" android:layout_marginStart="27dp" android:layout_marginEnd="27dp" android:outlineSpotShadowColor="@color/black" android:outlineAmbientShadowColor="@color/black" app:cardCornerRadius="20dp" app:cardElevation="30dp">
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_report_traffic_violation" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.google.android.material.card.MaterialCardView android:id="@+id/cv_report_traffic_violation_icon" android:layout_width="67dp" android:layout_height="67dp" app:cardBackgroundColor="@color/blue" app:cardCornerRadius="20dp" app:strokeColor="@color/white" app:strokeWidth="2dp">
                        <ImageView android:id="@+id/iv_report_traffic_violation_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginStart="20dp" app:srcCompat="@drawable/ic_report_traffic_violation"/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView android:textAppearance="?attr/textAppearanceHeadline6" android:textSize="17sp" android:textColor="@color/black" android:layout_gravity="center" android:id="@+id/tv_report_traffic_violation" android:layout_width="140dp" android:layout_height="wrap_content" android:text="Report Traffic Violation" android:layout_marginStart="20dp"/>
                    <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/iv_report_traffic_violation_view_more" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="60dp" android:layout_weight="1" android:layout_marginStart="60dp" app:srcCompat="@drawable/ic_view_arrow"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:id="@+id/cv_report_accident" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="18dp" android:layout_marginStart="27dp" android:layout_marginEnd="27dp" android:outlineSpotShadowColor="@color/black" android:outlineAmbientShadowColor="@color/black" app:cardCornerRadius="20dp" app:cardElevation="30dp">
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_report_accident" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.google.android.material.card.MaterialCardView android:id="@+id/cv_report_accident_icon" android:layout_width="67dp" android:layout_height="67dp" app:cardCornerRadius="20dp" app:strokeColor="@color/grey" app:strokeWidth="2dp">
                        <ImageView android:id="@+id/iv_report_accident_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="20dp" app:srcCompat="@drawable/ic_report_accident"/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView android:textAppearance="?attr/textAppearanceHeadline6" android:textSize="17sp" android:textColor="@color/black" android:layout_gravity="center" android:id="@+id/tv_report_accident" android:layout_width="140dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Report Accident" android:layout_marginStart="20dp"/>
                    <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/iv_report_accident_view_more" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="60dp" android:layout_weight="1" android:layout_marginStart="60dp" app:srcCompat="@drawable/ic_view_arrow"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
