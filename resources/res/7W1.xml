            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_10sdp">
                <TextView android:textSize="14sp" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Receipt No." android:layout_weight="1"/>
                <TextView android:textSize="14sp" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Receipt Date" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/_10sdp">
