                <TextView android:textSize="14sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/vahan_rcp_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_5sdp">
