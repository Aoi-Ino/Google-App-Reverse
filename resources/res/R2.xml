<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:id="@+id/linear_layout" android:padding="2dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/icon" android:padding="5dp" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/app_icon"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:padding="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#000" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Title"/>
        <TextView android:textSize="12sp" android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Message"/>
    </LinearLayout>
</LinearLayout>
