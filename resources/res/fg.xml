<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp"/>
                    <stroke android:width="4dp" android:color="#0bafff"/>
                    <solid android:color="#0bafff"/>
                    <size android:height="30dp" android:width="30dp"/>
                </shape>
            </item>
            <item android:height="2dp" android:width="8dp" android:left="6dp" android:top="20dp">
                <rotate android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>
            <item android:height="2dp" android:width="19dp" android:left="9dp" android:top="16dp">
                <rotate android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>
